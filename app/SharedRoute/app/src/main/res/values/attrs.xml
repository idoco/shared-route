<resources>

    <declare-styleable name="TooltipView">
        <attr name="anchoredView" format="reference" />
        <attr name="cornerRadius" format="dimension" />
        <attr name="tooltipColor" format="color" />
        <attr name="arrowHeight" format="dimension" />
        <attr name="arrowWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CircledPicker">
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="lineColor" format="color" />
        <attr name="subLineColor" format="color" />
        <attr name="maxValue" format="integer" />
        <attr name="step" format="integer" />
        <attr name="thickness" format="dimension" />
        <attr name="innerThickness" format="dimension" />
        <attr name="pickerMode" format="string" />
    </declare-styleable>

</resources>
