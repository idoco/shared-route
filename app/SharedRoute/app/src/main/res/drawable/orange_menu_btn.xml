<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                    android:color="#ee7600" />
            <stroke
                    android:width="1dp"
                    android:color="#ee7600" />
            <corners
                    android:radius="3dp" />
            <padding
                    android:left="30dp"
                    android:top="5dp"
                    android:right="30dp"
                    android:bottom="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                    android:color="#ffa500" />
            <stroke
                    android:width="1dp"
                    android:color="#ee7600" />
            <corners
                    android:radius="4dp" />
            <padding
                    android:left="30dp"
                    android:top="5dp"
                    android:right="30dp"
                    android:bottom="5dp" />
        </shape>
    </item>
</selector>